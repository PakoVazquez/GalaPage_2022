@page
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model GalaPage_2022.Pages.Contact.ContactModel
@{
    ViewData["Title"] = "Contactanos";
}
<div>
    <div class="container">
        <h3 class="text-center display-5 my-5">@localizer["Header10"]</h3>
        <div class="row my-4">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="text-center">@localizer["Header11"]</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-floating mb-3">
                                <input type="text" asp-for="Contacto.Nombre" class="form-control" id="nombreProspecto" placeholder="Maria Sanchez" required>
                                <label for="nombreProspecto" class="form-label">@localizer["lblFormName"]</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="email" asp-for="Contacto.Correo" class="form-control" id="correoProspecto" placeholder="correo@gmail.com" required>
                                <label for="correoProspecto" class="form-label">@localizer["lblFormEmail"]</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="tel" asp-for="Contacto.Telefono" class="form-control" id="telefonoProspecto" placeholder="555-666 66 66" required>
                                <label for="telefonoProspecto" class="form-label">@localizer["lblFormPhone"]</label>
                            </div>
                            <div class="row">
                                <div class="form-floating col-md-6 mb-3">
                                    <input type="text" asp-for="Contacto.Ciudad" class="form-control" id="ciudadProspecto" placeholder="Tijuana">
                                    <label for="ciudadProspecto" class="form-label">@localizer["lblFormCity"]</label>
                                </div>
                                <div class="form-floating col-md-6 mb-3">
                                    <input type="text" asp-for="Contacto.Estado" class="form-control" id="estadoProspecto" placeholder="Baja Califonria">
                                    <label for="estadoProspecto" class="form-label">@localizer["lblFormState"]</label>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <textarea asp-for="Contacto.Mensaje" class="form-control" id="textareaMessage"></textarea>
                                <label for="textareaMessage" class="form-label">@localizer["lblFormMessage"]</label>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" 
                                    type="submit">
                                    @localizer["btnSend"]
                                </button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer margin60">

                    </div>
                </div>

            </div>
            <div class="col-md-3 margin60"></div>
        </div>
    </div>
</div>