                        <h3 class="text-black my-4">Amigo Restaurante</h3>
                    </div>
                    <p>@localizer["TextCardRestaurant"]</p>
                    <a class="btn btn-outline-primary text-uppercase shadow" asp-area="" asp-page="/Products/Restaurant">@localizer["btnKnowMore"]</a>
                </div>
                <div class="col-md-4 mb-5">
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/images/IconoAlmacen.png" alt="Almacén" />
                        <h3 class="text-black my-4">Amigo Almacén</h3>
                    </div>
                    <p>@localizer["TextCardWarehouse"]</p>
                    <a class="btn btn-outline-primary text-uppercase shadow" asp-area="" asp-page="/Products/Warehouse">@localizer["btnKnowMore"]</a>
                </div>
                <div class="col-md-4 mb-5">
                    <div class="d-flex flex-column align-items-center">
                        <img src="~/images/IconoFactura.png" alt="Facturación" />
                        <h3 class="text-black my-4">Amigo Facturación</h3>
                    </div>
                    <p>@localizer["TextCardInvoice"]</p>
                    <a class="btn btn-outline-primary text-uppercase shadow" asp-area="" asp-page="/Products/Billing">@localizer["btnKnowMore"]</a>
                </div>
            </div>
            <div class="botones-informacion">
                <a class="btn btn-lg btn-success shadow" href="https://api.whatsapp.com/send?phone=5216632073451" target="_blank">
                    <i class="fa fa-whatsapp fs-2" aria-hidden="true"></i>
                    <span class="mx-3">@localizer["btnWhatsApp"]</span>
                </a>
                <a class="btn btn-lg btn-primary shadow" asp-area="" asp-page="">@localizer["btnRequestADemo"]</a>
                <a class="btn btn-lg btn-outline-primary shadow" asp-area="" asp-page="/Services">@localizer["btnPrices"]</a>
            </div>
        </div>
    </div>
    <div class="bg-gray25 padding60">
        <div class="container">
            <h2 class="letra-domine text-capitalize text-center">@localizer["Header40"]</h2>
        <div class="row my-5">
            <div class="col-md-6">
                    <h3 class="mt-5">@localizer["Header41"]</h3>
                <ul>
                    <li>@localizer["ECommerceAttr1"]</li>
                    <li>@localizer["ECommerceAttr2"]</li>
                    <li>@localizer["ECommerceAttr3"]</li>
                    <li>@localizer["ECommerceAttr4"]</li>
                    <li>@localizer["ECommerceAttr5"]</li>
                </ul>
            </div>
            <div class="col-md-6 d-flex justify-content-center">
                <img src="~/images/Imagen02.png" alt="Página Web" class="w-50" />
            </div>
        </div>
        <div class="d-grid gap-3 d-flex justify-content-center my-5">
            <a class="btn btn-lg btn-success shadow" href="https://api.whatsapp.com/send?phone=5216632073451" target="_blank">
                <i class="fa fa-whatsapp fs-2" aria-hidden="true"></i>
                <span class="mx-3">@localizer["btnWhatsApp"]</span>
            </a>
                <a class="btn btn-lg btn-outline-primary shadow" asp-area="" asp-page="/Products/SalesWebPage">@localizer["txtInfo"]</a>
        </div>
    </div>  
