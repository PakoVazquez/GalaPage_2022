@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gala Sistemas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Domine:wght@500&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GalaPage_2022.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary box-shadow">
            <div class="container-fluid mx-5">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img style="width: 42px;" src="~/images/LogoGala.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">@localizer["HomeMenu"]</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                            id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @localizer["ProgramsMenu"]
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/Restaurant">@localizer["RestaurantSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/Warehouse">@localizer["WareHouseSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/Hotel">@localizer["HotelSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/Billing">@localizer["InvoiceSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/SalesWebPage">@localizer["RestOnLineSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/MercadoPago">@localizer["MercadoPagoSoftSubMenu"]</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Products/OtrosProductos">@localizer["MoreProgramsSubMenu"]</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Services">@localizer["PlansMenu"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">@localizer["AboutUsMenu"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact/Contact">@localizer["ContactMenu"]</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-dark text-muted">
        <div class="container text-center text-wrap">
            <p>
                &copy; 2023 - Gala Sistemas S.A. de C.V. Tijuana BC México 
            </p>
            <p>
                <a class="text-decoration-none text-muted" asp-area="" asp-page="/Privacy">
                    @localizer["PrivacyPolicy"]
                </a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>